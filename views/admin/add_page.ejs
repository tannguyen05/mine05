<% include ../layouts/admin_header.ejs %>
    <h2 class="page-title">Add a page</h2>
    <a href="/admin/pages" class="btn btn-primary" style="margin: 20px 0 20px 0;">List page</a>
    <% if(errors.length>0){ %>
        <% errors.forEach((err)=>{%>
            <div class="alert alert-danger"><%= err.msg %></div>
        <% }) %>
    <% } %>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%=message[0] %></div>
    <% } %>
    <form action="/admin/add-page" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" placeholder="Title" autocomplete="off" id="title">
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" placeholder="Slug" autocomplete="off" id="slug">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" cols="30" rows="10" class="form-control ckeditor" placeholder="Content" id="content"></textarea>
        </div>
        <input type="submit" class="btn btn-submit" value="Submit">
    </form>
<% include ../layouts/admin_footer.ejs %>