<% include ../layouts/header.ejs %>
<% if(product){ %>
<div class="row">
	<div class="preview col-md-8">
		<a data-fancybox="gallery" href="/product_images/<%= product._id %>/gallery/<%= product.image %>">
			<img src="/product_images/<%= product._id %>/<%= product.image %>" alt="product_images" style="width: 500px; height: 400px;">
		</a>
		<ul class="gallery" style="padding: 0; margin: 0; list-style-type: none">
		<% gallery.forEach((file)=>{ %>
			<% if(file != "thumbs"){ %>
			<li style="display: inline-block; margin-top: 10px; ">
				<a data-fancybox="gallery" href="/product_images/<%= product._id %>/gallery/<%= file %>">
					<img src="/product_images/<%= product._id %>/gallery/thumbs/<%= file %>" alt="product_images" >
				</a>
			</li>
			<% } %>
		<% }) %>
		</ul>
	</div>
	<div class="details col-md-4">
		<h3 class="product-title"><%= product.title %></h3>

		<div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
			<input type="radio" id="star5" name="rating" value="5" checked /><label for="star5" title="5 star">5</label>
			<input type="radio" id="star4" name="rating" value="4" checked /><label for="star4" title="4 star">4</label>
			<input type="radio" id="star3" name="rating" value="3" checked /><label for="star3" title="3 star">3</label>
			<input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 star">2</label>
			<input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 star">1</label>
		</div>
		<p class="text-muted">15 reviews</p>
		<hr>
		<p class="product-description" id="description"><%= product.desc %></p>
		<hr>
		<h4 class="price">current price: <span class="text-danger">$<%= parseFloat(product.price).toFixed(2) %></span></h4>
		<hr>
		<a class="action" href="/cmscart/add/<%= product.slug %>">
			<button class="add-to-cart btn btn-primary" type="button">add to cart</button>
		</a>
	</div>
</div>
<% } %>
<% include ../layouts/footer.ejs %>